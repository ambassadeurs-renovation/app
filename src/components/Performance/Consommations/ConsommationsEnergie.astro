---
import { Common } from "dpe-audit";
import { IconEnergie } from "@component/Performance";
import { dataTableByEnergies } from "./utils";

interface Props {
    class?: string;
    consommations: Common.Consommation[];
}

const { consommations, class: className = "" }: Props = Astro.props;

const { tableBody, tableFooter } = dataTableByEnergies(consommations);
---

<table class:list={["table scrollbar-x-none xl:overflow-x-auto", className]}>
    <thead>
        <tr>
            <th>Energie</th>
            <th>EP</th>
            <th>EF</th>
            <th>EGES</th>
        </tr>
    </thead>

    <tbody>
        {
            tableBody.map((item) => (
                <tr>
                    <td>
                        <IconEnergie
                            energie={item.energie}
                            class="color-primary w-4 h-4"
                        />
                        {Common.energieToString(item.energie)}
                    </td>
                    <td>{Math.round(item.cef)} %</td>
                    <td>{Math.round(item.cep)} %</td>
                    <td>{Math.round(item.eges)} %</td>
                </tr>
            ))
        }
    </tbody>
    <tfoot>
        <tr>
            <td>Total</td>
            <td>{Math.trunc(tableFooter.cef).toLocaleString("fr-FR")}</td>
            <td>{Math.trunc(tableFooter.cep).toLocaleString("fr-FR")}</td>
            <td>{Math.trunc(tableFooter.eges).toLocaleString("fr-FR")}</td>
        </tr>
    </tfoot>
</table>
