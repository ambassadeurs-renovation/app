---
import { Enveloppe } from "dpe-audit";

interface Props {
    class?: string;
    text?: string | number | null;
    value?: Enveloppe.Paroi.Performance | null;
}

const { value = null, text = null, class: className = "" }: Props = Astro.props;
---

<span
    class:list={[
        "w-10 h-8 flex items-center justify-center font-medium",
        className,
    ]}
    data-performance={value}
>
    {text ?? (value ? Enveloppe.Paroi.performanceToString(value) : "-")}
</span>

<style>
    span[data-performance="tres_bonne"] {
        color: #ffffff;
        background-color: #2caf85;
    }
    span[data-performance="bonne"] {
        color: #ffffff;
        background-color: #a5cc74;
    }
    span[data-performance="moyenne"] {
        color: #ffffff;
        background-color: #f49838;
    }
    span[data-performance="insuffisante"] {
        color: #ffffff;
        background-color: #e52322;
    }
</style>
