---
import { Enveloppe } from "dpe-audit";

interface Props {
    class?: string;
    value?: Enveloppe.PerformanceConfortEte | null;
}

const { value = null, class: className = "" }: Props = Astro.props;
const text = value ? Enveloppe.confortEteToString(value) : "-";
---

<span
    class:list={["h-8 px-2 flex items-center justify-center font-medium", className]}
    data-performance={value}
>
    {text}
</span>

<style>
    span[data-performance="bon"] {
        color: #ffffff;
        background-color: #2caf85;
    }
    span[data-performance="moyen"] {
        color: #ffffff;
        background-color: #f49838;
    }
    span[data-performance="insuffisant"] {
        color: #ffffff;
        background-color: #e52322;
    }
</style>
