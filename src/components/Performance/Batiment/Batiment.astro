---
import { Batiment as BatimentType } from "dpe-audit";
import { Icon } from "astro-icon/components";
import { Actions } from "@component/Diagnostic"

interface Props {
    class?: string;
    batiment: BatimentType.Batiment;
}

const { batiment, class: className = "" }: Props = Astro.props;
---

<div class={className}>
    <div class="md:p-4 lg:p-0 flex items-center gap-4">
        <div class="start p-4 bg-primary">
            <Icon
                class="text-white"
                name="ui/house-building"
                width={48}
                height={48}
            />
        </div>
        <div class="center grow">
            <div class="font-semibold">
                {BatimentType.typeBatimentToString(batiment.type)}
            </div>
            <div class="content">
                <p>{batiment.adresse.nom}</p>
                <p>Surface : {batiment.surface_habitable} m²</p>
                <p>Année de construction : {batiment.annee_construction}</p>
            </div>
        </div>
        <div class="actions text-primary">
            <Actions />
        </div>
    </div>
</div>
