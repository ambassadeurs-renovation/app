---
import { type Ressource } from "../../data/ressources";

interface Props {
    ressource: Ressource;
    class?: string;
}

const { ressource, class: className = "" }: Props = Astro.props;
---

<a
    href={ressource.url}
    target="_blank"
    class:list={[
        "border border-color border-3 rounded-md flex items-center px-4 py-6 gap-6",
        className,
    ]}
>
    <div
        class="grow flex flex-col md:flex-row gap-6 items-start md:items-center"
    >
        <img
            src={ressource.img}
            alt={ressource.titre}
            loading="lazy"
            class="w-[120px] h-auto"
        />

        <div class="grow">
            <h3 class="text-lg font-semibold">
                {ressource.titre}
            </h3>
            <p class="text-sm">{ressource.description}</p>
        </div>
    </div>

    <div class="text-2xl text-primary text-nowrap">-></div>
</a>

<style>
    a:hover {
        border-color: var(--color-primary);
    }
</style>