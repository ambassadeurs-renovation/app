    {
        data.map((item) => (
            <Row name={Enveloppe.typeDeperditionToString(item.type)}>
                <Chip
                    slot="origin"
                    class="mx-auto primary"
                    value={item.origin}
                    compare={item.target}
                >
                    {Math.round(item.origin).toLocaleString()}
                </Chip>

