---
interface Props {
    class?: string;
    value?: number | null;
    compare?: number | null;
}

const {
    value = null,
    compare = null,
    class: className = "",
}: Props = Astro.props;

const text = value != null ? Math.trunc(value) : "-";
const chip = value != null && compare != null && value < compare;
---

<span
    class:list={[
        { chip },
        { "rounded-full": chip },
        { "text-sm": chip },
        className,
    ]}
>
    {text}
</span>

<style>
    .chip {
        min-width: 2rem;
        text-align: center;
        padding: 0.25rem 0.5rem;
        background-color: var(--color-secondary);
        color: #fff;
    }
</style>
