---
interface Props {
    name: string;
}

const { name } = Astro.props;
---

<dialog id={name} class="modal">
    <div class="modal-box max-w-[54rem]">
        <form method="dialog">
            <button
                class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2"
            >
                âœ•
            </button>
        </form>

        <div class="mt-2 markdown-body">
            <slot />
        </div>
    </div>
</dialog>

<style>
    .modal {
        .btn,
        .btn:hover,
        .btn:focus,
        .btn:active {
            border: none;
            outline: none;
            background-color: transparent;
        }
    }
</style>
